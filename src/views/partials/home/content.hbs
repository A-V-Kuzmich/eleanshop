<section class="content">
    <div class="container">
        <ul class="content__list">
            {{#each this}}
            <li class="content__item">
                <article class="content__card">
                    <h2 class="content__category">{{name}}</h2>
                    <a href="{{link}}" class="content__link">
                        <picture class="content__img">
                            <source srcset="{{image}} 1x, {{image_2x}} 2x">
                            <source srcset="{{image-desk}} 1x, {{image-desk_2x}} 2x" media="(min-width: 1378px)">
                            <img src="{{image}}" alt="{{description}}">
                        </picture>
                    </a>
                </article>
            </li>
            {{/each}}
        </ul>
    </div>
</section>

